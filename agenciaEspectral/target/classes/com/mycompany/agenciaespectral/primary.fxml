<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<HBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
fx:controller="com.mycompany.agenciaespectral.PrimaryController">
<padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
<children>
<VBox spacing="10.0">
<children>
<Label text="O Caso do Solar Blackwood">
<font><Font name="System Bold" size="18.0" /></font>
</Label>
<Label text="Escolha seu Detetive:" />
<HBox spacing="10.0">
<children>
<RadioButton fx:id="radioCientista" mnemonicParsing="false" selected="true" text="Dr. Aris
Thorne (Cientista)">
<toggleGroup><ToggleGroup fx:id="detetiveGroup" /></toggleGroup>
</RadioButton><RadioButton fx:id="radioParanormal" mnemonicParsing="false" text="Luna Seraphina
(Paranormal)" toggleGroup="$detetiveGroup" />
</children>
</HBox>
<Label text="Pistas Encontradas:" />
<ListView fx:id="listViewEvidencias" prefHeight="200.0" />
</children>
</VBox>
<VBox spacing="10.0">
<children>
<Label text="Painel de Ações">
<font><Font name="System Bold" size="18.0" /></font>
</Label>
<TextArea fx:id="textAreaDetalhes" editable="false" prefHeight="100.0" promptText="Selecione
uma pista para analisar..." />
<Button fx:id="btnAnalisar" disable="true" onAction="#analisarPista" text="[Ação Padrão]
Analisar Pista" />
<Button fx:id="btnInteragir" disable="true" onAction="#interagirComPista" text="[Ação
Científica] Coletar Amostra" />
<Button fx:id="btnSentir" disable="true" onAction="#sentirEnergiaDaPista" text="[Ação
Paranormal] Sentir Energia" />
<Separator prefWidth="200.0" />
<Label text="Diário do Caso:" />
<ListView fx:id="listViewLogs" prefHeight="100.0" />
</children>
</VBox>
</children>
</HBox>