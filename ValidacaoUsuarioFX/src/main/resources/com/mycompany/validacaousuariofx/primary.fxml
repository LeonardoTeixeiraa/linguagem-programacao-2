<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17"
xmlns:fx="http://javafx.com/fxml/1"
fx:controller="com.mycompany.validacaousuariofx.PrimaryController">
 <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0"
/></padding>
 <children>
 <Label text="Crie seu Nome de Usuário">
 <font><Font name="System Bold" size="18.0" /></font>
 </Label>
 <TextField fx:id="usernameTextField" promptText="Digite o nome de usuário" />
 <Button onAction="#handleValidar" text="Validar" />
 <Label fx:id="feedbackLabel" text="Aguardando validação..." />
 </children>
</VBox>